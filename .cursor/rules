def mock_supabase_data():
    categories = [
        Category(id=1, name="◊™◊ê◊ï◊®◊™ ◊®◊ó◊ï◊ë", text="◊ë◊¢◊ô◊ï◊™ ◊™◊ê◊ï◊®◊î", image_url="", event_call_desc="lighting"),
        Category(id=2, name="◊†◊ô◊ß◊ô◊ï◊ü", text="◊ë◊¢◊ô◊ï◊™ ◊†◊ô◊ß◊ô◊ï◊ü", image_url="", event_call_desc="cleaning")
    ]
